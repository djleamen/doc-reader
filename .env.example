# Environment variables
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here # e.g. us-west1-gcp

# Azure RAG Pipeline Configuration (Experimental)
# ============================================

# Authentication Strategy
AZURE_USE_MANAGED_IDENTITY=false  # Set to true in production (Azure-hosted)
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key_here  # Only if not using Managed Identity
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your_search_key_here  # Only if not using Managed Identity
AZURE_SEARCH_INDEX_NAME=rag-documents
AZURE_SEARCH_API_VERSION=2024-05-01-preview

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your_doc_intelligence_key_here  # Only if not using Managed Identity

# Azure Key Vault (Optional - for secrets management)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Storage (Optional - for document storage)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=your_connection_string_here  # Only if not using Managed Identity

# Azure RAG Pipeline Settings
AZURE_CHUNK_SIZE=1000
AZURE_CHUNK_OVERLAP=200
AZURE_TOP_K_RESULTS=5
AZURE_EMBEDDING_BATCH_SIZE=20  # Reduce for S0 tier (60K tokens/min limit)
AZURE_ENABLE_SEMANTIC_SEARCH=true
AZURE_ENABLE_HYBRID_SEARCH=true
AZURE_TEMPERATURE=0.1
AZURE_MAX_TOKENS=4000

# Performance & Reliability
AZURE_MAX_RETRIES=3
AZURE_RETRY_DELAY=1
AZURE_TIMEOUT=30
AZURE_ENABLE_CACHING=true
AZURE_CACHE_TTL=3600

# Monitoring (Optional)
AZURE_ENABLE_APP_INSIGHTS=false
AZURE_APP_INSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# Model configurations
EMBEDDING_MODEL=text-embedding-ada-002
CHAT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.1

# Vector database settings
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma, pinecone
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Document processing
MAX_DOCUMENT_SIZE_MB=100
SUPPORTED_FORMATS=pdf,docx,txt,md

# API settings
HOST=0.0.0.0
PORT=8000
DEBUG=False
